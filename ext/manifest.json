{
  "name": "__MSG_name__",
  "version": "0.4.0",
  "manifest_version": 2,
  "description": "__MSG_desc__",
  "homepage_url": "http://share-a-tab.phinitive.com/home",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": false
  },
  "options_page": "src/options/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "share a tab",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "cookies",
    "notifications",
    "tabs",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://share-a-tab.phinitive.com/; object-src 'self'"
}
